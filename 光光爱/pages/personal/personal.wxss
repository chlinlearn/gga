/* pages/personal/personal.wxss */
.backgroundImage{
  width: 100%;
  height: 100%;
  z-index: -1;
  position: fixed;
}
.top{
  background-color: rgba(235,58,58,0.5);
  width: 100%;
  height: 95px;
}
.top-left{
  vertical-align: middle;
  display: inline-block;
  margin-left: 10px;
}
.top-left image{
  width: 95px;
  height: 95px;
}
.top-middle{
  vertical-align: middle;
  display: inline-block;
  margin-left: 10px;
  margin-top: 15px;
}
.top-middle-id{
  display: block;
  font-weight: 600;
  font-size: 17px;
  color: rgba(0,0,0,0.5);
}
.top-middle-type{
  display: block;
  font-weight: 600;
  font-size: 13px;
  margin-top: 10px;
  color: rgba(0,0,0,0.5);
}
.top-right{
  vertical-align: middle;
  display: inline-block;
  position: absolute;
  right: 20px;

}
.top-right-setting{
  font-size: 13px;
  display: block;
  color: white;
  margin-top: 10px;
}
.top-right-go{
  font-size: 25px;
  color: white;
  display: block;
  margin-top: 15px;
}
.clearance{
  width: 100%;
  height: 15px;
  background: rgba(0,0,0,0.06);
}
.account,.recharge,.enterpriseEntry,.info,.feedback{
  width: 100%;
  height: 55px;
  line-height: 55px;
  font-size: 17px;
  color: rgba(0,0,0,0.5);
  padding-left: 20px;
}
.account,.enterpriseEntry,.feedback{
  border-bottom: 1px solid rgba(0,0,0,0.1);
}